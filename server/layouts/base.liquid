<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {% block head %}
  <title>{{ title }}</title>
  {% endblock %}
  {% if NODE_ENV == "development" %}
  <script type="module" src="http://localhost:5173/@vite/client" defer></script>
  <script type="module" src="http://localhost:5173/client/index.js" defer></script>
  {% else %}
  <link rel="stylesheet" href="/index.css">
  <link rel="icon" type="image/x-icon" href="/images/logo.svg">

  {% endif %}
  {% block styles %}{% endblock %}
  {% block scripts %}{% endblock %}
</head>


<body>
  <header>
    <nav>
      <img src="/public/img/pokemonlogo.png" alt="pokeguesser logo">
      <label for="menuopen" id="menu"><input type="checkbox" id="menuopen" hidden>
        <p>Instellingen</p>
        <ul class="pokeball base">
          <li class="pokeball-top"></li>
          <li class="pokeball-mid-top"></li>
          <li class="pokeball-mid-bottom"></li>
          <li class="pokeball-bottom"></li>
        </ul>
      </label>
    </nav>
  </header>
  <main>
    {% block content %}
    {% endblock %}
  </main>
  <footer>
    <ul>
      <li>
        <label for="guesspkm" id="menu"><input type="radio" id="guesspkm" name="menus" class="guesspkm" hidden checked>
          <p>Home</p>
        </label>
      </li>
      <li>
        <label for="pokemonlistopen" id="menu"><input type="radio" id="pokemonlistopen" name="menus" hidden>
        <div id="catch-counter" class="catch-counter">
          <ul class="pokeball catch">
            <li class="pokeball-top"></li>
            <li class="pokeball-mid-top"></li>
            <li class="pokeball-mid-bottom"></li>
            <li class="pokeball-bottom"></li>
          </ul>
          <p><span class="caught-count">0</span> / <span class="total-count">0</span></p>
        </div>
        </label>
      </li>
      <li>
        <label for="pokedexopen" id="menu"><input type="radio" id="pokedexopen" name="menus" class="pokedexopen" hidden>
          <p>Pokedex</p>
        </label>
      </li>
    </ul>


  </footer>
</body>

</html>
